<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Todo Application</h1>
        <p class="lead">Hey, Welcome in!</p>
        <p class="lead">Check your todos! Add new todo! Mark previous todo done!</p>
    </div>
</div>


<div class="form-group row">
    <div class="col-sm-10">
        <a href="/todos/add" class="btn btn-light">Add Todo</a>
    </div>
</div>

<ul class="list-group">

    {{#each todos}}

    <li class="list-group-item"><a href="/todos/edit/{{this.todo_id}}">{{this.todo_title}}</a></li>

    {{/each}}

</ul>